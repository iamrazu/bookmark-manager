{
    "manifest_version": 2,
    "name": "Bookmark Manager",
    "description": "POST details of the current page to a remote endpoint.",
    "version": "1.0.0",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}